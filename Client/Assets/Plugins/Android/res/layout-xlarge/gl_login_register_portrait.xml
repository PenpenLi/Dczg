<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gl_dialog_portrait_width_xlarge"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_top_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/gl_title_register"
            android:textColor="@color/gl_color_title"
            android:textSize="30sp" />

        <Button
            android:id="@+id/gl_btn_close"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gl_icon_back_48x48" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_middle_bg"
        android:gravity="center_horizontal"
        android:padding="90dp" >

        <ImageView
            android:layout_width="150dp"
		    android:layout_height="150dp"
            android:src="@drawable/gl_logo_gplus" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/gl_dialog_portrait_width_xlarge"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_middle_bg"
        android:orientation="vertical"
        android:paddingLeft="40dp" 
        android:paddingRight="40dp" 
        android:paddingTop="20dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gl_edit_height_xlarge"
            android:layout_marginTop="16dp"
            android:background="@drawable/gl_edit_bg"
			android:addStatesFromChildren="true"
			android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="38.6dp"
			    android:layout_height="42.6dp"
                android:layout_marginLeft="@dimen/gl_edit_icon_margin"
                android:layout_marginRight="@dimen/gl_edit_icon_margin"
                android:src="@drawable/gl_icon_message" />

            <EditText
                android:id="@+id/gl_edit_login_code"
                style="@style/gl_edit_text_normal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="@string/gl_hint_code"
                android:textSize="@dimen/gl_edit_text_size_xlarge" />

            <Button
                android:id="@+id/gl_btn_register_getcode"
                android:layout_width="wrap_content"
		        android:layout_height="@dimen/gl_edit_height2_xlarge"
		        android:layout_marginRight="@dimen/gl_code_margin_xlarge"
		        android:layout_gravity="center_vertical"
                android:background="@drawable/gl_icon_verification"
                android:text="@string/gl_get_code"
                android:textColor="@color/gl_color_red"
                android:textSize="@dimen/gl_code_btn_text_size_xlarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gl_edit_height_xlarge"
            android:layout_marginTop="16dp"
            android:background="@drawable/gl_edit_bg"
			android:addStatesFromChildren="true"
			android:gravity="center_vertical">

            <ImageView
                android:layout_width="38.6dp"
			    android:layout_height="42.6dp"
                android:layout_marginLeft="@dimen/gl_edit_icon_margin"
                android:layout_marginRight="@dimen/gl_edit_icon_margin"
                android:src="@drawable/gl_icon_lock" />

            <EditText
                android:id="@+id/gl_edit_login_pw"
                style="@style/gl_edit_text_normal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/gl_edit_height_xlarge"
                android:layout_weight="1"
                android:hint="@string/gl_hint_pw_tip"
                android:maxLength="15"
                android:textSize="@dimen/gl_edit_text_size_xlarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/gl_edit_height_xlarge"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gl_btn_login_register"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gl_btn_red"
                android:text="@string/gl_login_register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gl_btn_text_size_xlarge" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
		    android:layout_height="@dimen/gl_txt_height_xlarge"
		    android:layout_marginTop="16dp"
            android:text="@string/gl_login_account_instructions"
            android:textColor="@color/gl_color_text_grey"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_bottom_bg"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <ImageView
		    android:layout_width="224dp"
		    android:layout_height="58.6dp"
            android:src="@drawable/gl_logo_snda" />
    </RelativeLayout>

</LinearLayout>