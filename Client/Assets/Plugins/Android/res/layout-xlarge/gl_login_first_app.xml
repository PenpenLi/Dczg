<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gl_login_activity_bg_portrait"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_top_activity_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/gl_title_home"
            android:textColor="@color/gl_color_title"
            android:textSize="40sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@drawable/gl_middle_activity_bg"
        android:gravity="center" >

        <ImageView
		    android:layout_width="200dp"
		    android:layout_height="200dp"
            android:src="@drawable/gl_logo_gplus" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="@drawable/gl_middle_activity_bg"
        android:orientation="horizontal"
        android:padding="50dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/gl_edit_height_xlarge"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/gl_btn_login_gplus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gl_btn_red"
                    android:text="@string/gl_app_login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/gl_btn_text_size_xlarge" />

                <Button
                    android:id="@+id/gl_btn_login_snda"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/gl_loading_icon_snda"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/gl_agreement_panel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/gl_edit_height_xlarge"
                android:layout_marginTop="30dp" >

                <CheckBox
                    android:id="@+id/gl_check_agreement"
                    style="@style/gl_login_checkbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:checked="true" />

                <TextView
                    android:id="@+id/gl_text_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/gl_check_agreement"
                    android:text="@string/gl_login_approve_agreement"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gl_bottom_activity_bg"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <ImageView
	        android:layout_width="225.4dp"
	        android:layout_height="58.6dp"
            android:src="@drawable/gl_logo_snda" />
    </RelativeLayout>

</LinearLayout>