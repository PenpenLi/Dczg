<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/gl_login_activity_bg_portrait">
	<TextView
            android:id="@+id/gl_user_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/gl_demo_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
        <Button
            android:id="@+id/gl_btn_login"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/gl_login"/>
        <Button
            android:id="@+id/gl_btn_pay"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/gl_pay"
            android:visibility="visible" />
        <Button
            android:id="@+id/gl_btn_push"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/gl_push" 
            android:visibility="visible"/>
        <Button
            android:id="@+id/gl_btn_activate"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/gl_activate" />
        <Button
            android:id="@+id/gl_btn_logout"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="注销" />
        <Button
            android:id="@+id/gl_btn_getupdateurl"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="获取更新地址" />
        <Button
            android:id="@+id/gl_btn_getareaconfig"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="获取区服配置" />
        <Button
            android:id="@+id/gl_btn_getproductconfig"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="获取产品配置" />
    </LinearLayout>

</RelativeLayout>